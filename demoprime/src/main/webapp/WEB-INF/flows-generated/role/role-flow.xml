<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	<!-- Extended Persistence Context -->
	<persistence-context />
	<!-- Input: -->
	<!-- * create: 'true' the first view shows the view to create a new role -->
	<!--'false' to edit an existing role -->
	<input name="create" type="boolean" value="flowScope.create"/>
	<on-start>
		<set name="conversationScope.endParam" value="null" type="java.lang.String" />
	</on-start>
	<!-- Go to the edit state if we want to create a new role -->
	<decision-state id="startChoice">
		<if test="create" then="create" else="open" />
	</decision-state>
	<!-- OPEN EXISTING Role -->
	<subflow-state id="open" subflow="role/select">
		<!-- The user has selected an existing role -->
		<transition on="roleSelected" to="checkIfAlreadyOpenFlow">
			<set name="flowScope.role" value="currentEvent.attributes.roleSelected" />
		</transition>
		<!-- The user finally prefers to create a new role -->
		<transition on="new" to="endNew"/>
		<!-- The user wants to quit all the active flows for the entity family, we end the current flow -->
		<transition on="quit" to="end">
			<set name="conversationScope.endParam" value="'_cascadeQuit'"></set>
		</transition>
	</subflow-state>

	<decision-state id="checkIfAlreadyOpenFlow">
		<if test="flowsMenuHandler.isFlowAlreadyOpen(flowRequestContext,flowScope.role)" then="endSwitchToAlreadyOpenFlow" else="edit" />
	</decision-state>
	
	<!-- Edit subflow to edit any role -->
	<subflow-state id="edit" subflow="role/edit">
		<input name="role" value="role" />
		<transition on="endEdit" to="end" />
		<transition on="cancelEdit" to="end" />
		<transition on="deleteAndClose" to="end"/>
	</subflow-state>

	<!-- Create subflow to create a new role -->
	<subflow-state id="create" subflow="role/edit">
		<input name="role" value="domainFactory.newRole" />
		<transition on="endEdit" to="end" />
		<transition on="cancelEdit" to="end" />
		<transition on="deleteAndClose" to="end"/>
	</subflow-state>


	<end-state id="endNew" view="externalRedirect:servletRelative:/role?create=true" />

	<end-state id="end" view="externalRedirect:contextRelative:#{flowsMenuHandler.endStateRedirect(flowRequestContext,endParam)}" />

	<end-state id="endSwitchToAlreadyOpenFlow" view="externalRedirect:contextRelative:#{flowsMenuHandler.endStateRedirectToAlreadyOpenFlow(flowRequestContext,flowScope.role)}" />

	<end-state id="endError" view="externalRedirect:servletRelative:#{flowsMenuHandler.getErrorEndStateRedirect()}" />

	<global-transitions>
		<transition on="error" to="endError" />
	</global-transitions>
</flow>